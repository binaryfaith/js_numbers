<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <title>Survey</title>
        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
        <script type ="text/javascript" src="/socket.io/socket.io.js"></script>
        <script type ="text/javascript">
    $(document).ready(function (){
        // triggers the connection event in our server!
        var socket = io.connect();
        // submit data to the server using emit
        $('#epic_button').click(function() {
            socket.emit("increase_count", {
            });
        });
        $('#reset_button').click(function() {
            socket.emit("reset_count")
        });
        socket.on('updated_counter', function (data){
            $('#countermessage').html("The button has been pressed " + data.counter + " time(s).");
        });
    });
</script>
    </head>
    <body>
        <h1>Epic Button Game!</h1>
        <div id="container">
        <div id = "countermessage"></div>
        <h3>Push the button to increase the counter!</h3>
        <button id ="epic_button">EPIC BUTTON</button>
        <button id ="reset_button">Reset Counter</button>
        </div>

    </body>
</html>